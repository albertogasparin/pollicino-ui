{
  "name": "pollicino-ui",
  "version": "0.1.0",
  "description": "Material design inspired React UI library",
  "author": "Alberto Gasparin",
  "keywords": [],
  "config": {
    "testfiles": "find . -name unit*.js ! -path */node_modules/*",
    "mochaargs": "--compilers js:babel-polyfill,js:babel-register --require ./tests/helpers/react-compat --require ./tests/helpers/unit.boot"
  },
  "scripts": {
    "prepublish": "npm run build -s",
    "prebuild": "npm run clean -s && npm run test -s",
    "build": "npm run build:js -s && npm run build:css -s",
    "build:js": "babel src -d lib --ignore **/__tests__",
    "build:css": "for dir in ./src/*; do cp \"$dir/style.scss\" \"${dir/\/src//lib}/style.scss\";done",
    "pretest": "npm run lint -s",
    "test": "npm run test:unit -s",
    "test:unit": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:unit:watch": "npm run test:unit -- --watch --watch-extensions jsx,json --reporter min",
    "test:int": "rm -rf ./shots/error && NODE_ENV=test PORT=3003 wdio wdio.conf.js",
    "coverage": "NODE_ENV=test nyc -i babel-polyfill -i babel-register -i ./tests/helpers/react-compat --all mocha $npm_package_config_mochaargs $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore . && stylelint --syntax scss \"src/**/*.scss\"",
    "clean": "rm -rf ./lib && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "start-storybook -p 9001"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "**/__tests__/**"
    ],
    "include": [
      "components"
    ]
  },
  "dependencies": {
    "lodash": "^4.1.0",
    "react-day-picker": "^2.3.2",
    "react-simple-colorpicker": "~1.3.0",
    "sortablejs": "~1.4.2"
  },
  "devDependencies": {
    "@kadira/storybook": "^1.36.0",
    "autoprefixer": "^6.3.0",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "css-loader": "~0.14.5",
    "enzyme": "^2.2.0",
    "eslint": "^2.10.0",
    "eslint-plugin-react": "^5.0.0",
    "image-webpack-loader": "^1.8.0",
    "mocha": "^2.5.0",
    "mocha-steps": "^1.0.0",
    "node-sass": "^3.6.0",
    "nyc": "^6.4.0",
    "postcss-loader": "^0.9.0",
    "react-addons-test-utils": "~15.1.0",
    "require-hacker": "^2.1.3",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.5.0",
    "svg-sprite-loader": "0.0.24",
    "testdouble": "^1.4.0",
    "testdouble-chai": "^0.2.0",
    "wdio-dot-reporter": "0.0.5",
    "wdio-mocha-framework": "^0.3.1",
    "wdio-selenium-standalone-service": "0.0.5",
    "webdriverio": "^4.0.9",
    "webpack": "^1.13.0"
  },
  "peerDependencies": {
    "react": "~15.1.0",
    "react-dom": "~15.1.0"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
