{
  "name": "pollicino-ui",
  "version": "1.0.3",
  "description": "Clean, Material Design inspired React UI component library",
  "author": "Alberto Gasparin",
  "keywords": [],
  "config": {
    "testfiles": "find . -name unit*.js -not -path */node_modules/*",
    "mochaargs": "--compilers js:babel-polyfill,js:babel-register --require ./tests/helpers/react-compat --require ./tests/unit/setup"
  },
  "scripts": {
    "preversion": "npm run test -s",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build -s",
    "prebuild": "npm run clean -s && npm run test -s",
    "build": "npm run build:js -s && npm run build:css -s",
    "build:js": "babel src -d lib --ignore **/__tests__",
    "build:css": "for dir in ./src/*; do cp \"$dir/style.scss\" \"${dir//src//lib}/style.scss\";done",
    "pretest": "npm run lint -s",
    "test": "npm run test:unit -s",
    "test:unit": "NODE_ENV=test mocha $($npm_package_config_testfiles) $npm_package_config_mochaargs",
    "test:unit:watch": "npm run test:unit -- --watch --watch-extensions jsx,json --reporter nyan",
    "test:int": "NODE_ENV=test PORT=3003 wdio wdio.conf.js",
    "coverage": "NODE_ENV=test nyc mocha $npm_package_config_mochaargs --reporter dot $($npm_package_config_testfiles)",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore . && stylelint --syntax scss \"src/**/*.scss\"",
    "clean": "rm -rf ./lib && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "start-storybook -p 9001"
  },
  "nyc": {
    "require": [
      "babel-polyfill",
      "babel-register",
      "./tests/helpers/react-compat"
    ],
    "exclude": [
      "webpack.config.js",
      "tests",
      "**/__tests__/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "lodash": "^4.1.0",
    "react-day-picker": "~2.3.3",
    "react-simple-colorpicker": "~1.3.0",
    "sortablejs": "~1.4.2"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.1.0",
    "@kadira/storybook": "^1.41.0",
    "autoprefixer": "^6.3.0",
    "babel-cli": "^6.11.0",
    "babel-core": "^6.11.0",
    "babel-loader": "^6.2.0",
    "babel-plugin-istanbul": "~1.0.3",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.11.0",
    "chai": "^3.5.0",
    "css-loader": "~0.14.5",
    "enzyme": "^2.4.0",
    "eslint": "^3.1.0",
    "eslint-plugin-react": "^5.0.0",
    "image-webpack-loader": "^2.0.0",
    "mocha": "^2.5.0",
    "mocha-steps": "^1.0.1",
    "node-sass": "^3.6.0",
    "nyc": "~7.1.0",
    "postcss-loader": "^0.9.0",
    "react": "^15.2.0",
    "react-addons-test-utils": "^15.2.0",
    "react-dom": "^15.2.0",
    "require-hacker": "~2.1.4",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.0.0",
    "svg-sprite-loader": "0.0.26",
    "testdouble": "^1.6.0",
    "testdouble-chai": "^0.3.0",
    "wdio-dot-reporter": "0.0.6",
    "wdio-mocha-framework": "^0.3.10",
    "wdio-selenium-standalone-service": "0.0.5",
    "webdriverio": "^4.2.3",
    "webpack": "^1.13.0"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "react-dom": "^15.0.0"
  },
  "engines": {
    "node": ">= 4.0.0"
  }
}
